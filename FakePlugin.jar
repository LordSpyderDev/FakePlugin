package me.lordspyder.fake;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.java.JavaPlugin;

public class Fake extends JavaPlugin {

	public void onEnable() {
		Bukkit.getServer().getLogger().info("FakePlugin" + this.getDescription().getVersion() + " has been enabled!");
	}

	public void onDisable() {
		Bukkit.getServer().getLogger().info("FakePlugin" + this.getDescription().getVersion() + " has been disabled!");
	}

	public boolean onCommand(CommandSender sender, Command cmd, String commandLabel, String[] args) {
		if (cmd.getName().equalsIgnoreCase("fakeop")) {
			if (args.length == 0) {
				sender.sendMessage(ChatColor.RED + getConfig().getString("FakeOpPlayer"));
				return true;
			}
			Player target = Bukkit.getServer().getPlayer(args[0]);
			if (target == null) {
				sender.sendMessage(ChatColor.RED + getConfig().getString("FakeOpPlayerNotFind") + args[0]);
				return true;
			}
			target.sendMessage(ChatColor.YELLOW + getConfig().getString("FakeOpNowOp"));
		}
		if (cmd.getName().equalsIgnoreCase("fakejoin")) {
			if (args.length == 0) {
				sender.sendMessage(ChatColor.RED + getConfig().getString("FakeJoinPlayer"));
				return true;
			}
			Bukkit.getServer().broadcastMessage(ChatColor.YELLOW + args[0] + getConfig().getString("FakeJoinJoin"));
		}
		return true;
	}
}
